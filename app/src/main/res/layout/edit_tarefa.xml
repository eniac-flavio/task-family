<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg950">

    <!-- Conteúdo principal -->
    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="32dp"
        android:orientation="vertical">

        <!-- Margem superior -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="48dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <!-- Caixa de fundo para o título da tarefa -->
            <TextView
                android:id="@+id/fundo_tarefas"
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:background="@drawable/rectangle"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="Estudar para prova"
                android:textColor="@color/text700"
                android:textSize="28sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <!-- Caixa para o nome da tarefa -->
            <TextView
                android:id="@+id/nome_tarefas"
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:background="@drawable/rectangle"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:textColor="@color/text700"
                android:textSize="28sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:background="@drawable/rectangle"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:textColor="@color/text700"
                android:textSize="28sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <!-- EditText para o nome da tarefa -->
            <EditText
                android:id="@+id/txtNometarefa"
                android:layout_width="320dp"
                android:layout_height="52dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/editext_model"
                android:hint="Nome da tarefa:"
                android:importantForAutofill="no"
                android:inputType="textNoSuggestions"
                tools:ignore="HardcodedText,TextFields" />


            <android.widget.TimePicker
                android:id="@+id/timePicker"
                android:layout_width="174dp"
                android:layout_height="123dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="95dp"
                android:timePickerMode="spinner" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="8dp"
                tools:ignore="RtlSymmetry"/>
        </FrameLayout>

        <!-- FrameLayout vazio -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="8dp"
                tools:ignore="RtlSymmetry"/>
        </FrameLayout>

    </LinearLayout>

    <!-- Navbar fixa -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/prim400"
        app:itemIconTint="@color/bg100"
        app:itemTextColor="@color/bg100"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>
